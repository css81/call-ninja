<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <!-- 수신 설정 섹션 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="수신 설정"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingBottom="8dp"/>

    <RadioGroup
        android:id="@+id/rgReceiveSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbAllNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모든 번호 수신"/>

        <RadioButton
            android:id="@+id/rbContactsOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연락처만 수신"/>

        <RadioButton
            android:id="@+id/rbFavoritesOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="즐겨찾기만 수신"/>

        <RadioButton
            android:id="@+id/rbContactsAndFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연락처 + 즐겨찾기 수신"/>
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginVertical="16dp"/>

    <!-- 차단 리스트 섹션 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="차단 리스트"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBlockLogs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"/>
</LinearLayout>
