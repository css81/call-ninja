<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 앱 기본 테마 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 기본 색상 -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>

        <!-- 기본 텍스트 색상 -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>

        <!-- 버튼 스타일 -->
        <item name="buttonStyle">@style/AppButton</item>

        <!-- 스위치 스타일 -->
        <item name="switchStyle">@style/AppSwitch</item>
    </style>

    <!-- 버튼 스타일 -->
    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <!-- 스위치 스타일 -->
    <style name="AppSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumbTint">@color/switchThumbColor</item>
        <item name="android:trackTint">@color/switchTrackColor</item>
    </style>

</resources>
